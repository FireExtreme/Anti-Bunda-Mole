<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Anti_Bunda_Mole.ConfigPage"
             Title="Configurações">

    <Grid RowDefinitions="Auto,*" Padding="10">
        <!-- Topo fixo -->
        <Frame Grid.Row="0" CornerRadius="15" BackgroundColor="#33000000" Padding="10" HasShadow="False">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <ImageButton 
                    x:Name="btn_back"
                    Source="ic_return.png"
                    WidthRequest="64"
                    HeightRequest="64"
                    BackgroundColor="Transparent"
                    Clicked="OnBackClicked"/>
                <Label 
                    Text="Configurações"
                    FontSize="20"
                    FontAttributes="Bold"
                    TextColor="#FFE000"
                    HorizontalTextAlignment="Center"
                    VerticalTextAlignment="Center"
                    Grid.Column="1"/>
                <ImageButton 
                    x:Name="btn_save"
                    Source="save.png"
                    WidthRequest="64"
                    HeightRequest="64"
                    BackgroundColor="Transparent"
                    Clicked="OnSaveClicked"
                    Grid.Column="2"/>
            </Grid>
        </Frame>

        <!-- Conteúdo que rola -->
        <ScrollView Grid.Row="1" x:Name="scrollForm" Margin="0,10,0,0">
            <VerticalStackLayout x:Name="stack_main" Padding="10" Spacing="20">

                <!-- Intervalo de Aviso -->
                <HorizontalStackLayout VerticalOptions="Center">
                    <Label Text="Intervalo de Aviso (minutos):" TextColor="White" VerticalTextAlignment="Center"/>
                    <Entry x:Name="entry_intervalo" Keyboard="Numeric" WidthRequest="60" HorizontalOptions="End"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout VerticalOptions="Center">
                    <Button x:Name="btn_select_ringtone" Text="Selecionar Som" Clicked="OnSelectRingtoneClicked"/>
                    <Label x:Name="lbl_ringtone" Text="Arquivo atual: ringtone.wav" TextColor="White"/>
                </HorizontalStackLayout>
                <!-- Posição das Tarefas -->
                <VerticalStackLayout Padding="10" Spacing="10">
                    <Label Text="Posição das tarefas:" TextColor="White" FontAttributes="Bold"/>

                    <Grid ColumnDefinitions="Auto,Auto" RowDefinitions="Auto,Auto" ColumnSpacing="5" RowSpacing="5">
                        <Frame x:Name="person_cb_upper_l" StyleId="upper_l" CornerRadius="10" BackgroundColor="Transparent" Padding="5" Grid.Row="0" Grid.Column="0" WidthRequest="140">
                            <Image Source="person_cb_upper_l.png" WidthRequest="128" HeightRequest="64"/>
                        </Frame>
                        <Frame x:Name="person_cb_upper_r" StyleId="upper_r" CornerRadius="10" BackgroundColor="Transparent" Padding="5" Grid.Row="0" Grid.Column="1" WidthRequest="140">
                            <Image Source="person_cb_upper_r.png" WidthRequest="128" HeightRequest="64"/>
                        </Frame>
                        <Frame x:Name="person_cb_bottom_l" StyleId="bottom_l" CornerRadius="10" BackgroundColor="Transparent" Padding="5" Grid.Row="1" Grid.Column="0" WidthRequest="140">
                            <Image Source="person_cb_bottom_l.png" WidthRequest="128" HeightRequest="64"/>
                        </Frame>
                        <Frame x:Name="person_cb_bottom_r" StyleId="bottom_r" CornerRadius="10" BackgroundColor="Transparent" Padding="5" Grid.Row="1" Grid.Column="1" WidthRequest="140">
                            <Image Source="person_cb_bottom_r.png" WidthRequest="128" HeightRequest="64"/>
                        </Frame>
                    </Grid>
                </VerticalStackLayout>

                <!-- Dias da semana -->
                <ScrollView x:Name="stack_days"></ScrollView>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
